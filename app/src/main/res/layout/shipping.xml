<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ShippingSelectionActivity">

    <!-- Shipping Option Radio Group -->
    <RadioGroup
        android:id="@+id/shippingOptionRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/expeditionRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dikirim via Ekspedisi"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/pickupRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diambil Sendiri"
            android:textSize="18sp" />
    </RadioGroup>

    <!-- Next Button -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Next"
        android:textSize="18sp" />

</LinearLayout>